generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  projects Project[]
  skills   Skill[]
}

model Skill {
  id         Int      @id @default(autoincrement())
  skillName  String
  categoryId Int
  date       DateTime @default(now()) @db.Timestamp(6)
  level      Int      @default(50)
  category   Category @relation(fields: [categoryId], references: [id])
}

model Project {
  id               Int       @id @default(autoincrement())
  projectName      String
  projectThumbnail String
  siteLink         String?
  codeLink         String?
  description      String?
  date             DateTime  @default(now()) @db.Timestamp(6)
  categoryId       Int?
  image            Image[]
  category         Category? @relation(fields: [categoryId], references: [id])
}

model Image {
  id        Int      @id @default(autoincrement())
  caption   String?
  url       String
  projectId Int?
  date      DateTime @default(now()) @db.Timestamp(6)
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ContactMessage {
  id          Int      @id @default(autoincrement())
  senderName  String
  senderEmail String
  subject     String
  messageText String
  date        DateTime @default(now()) @db.Timestamp(6)
}
